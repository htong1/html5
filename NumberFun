<!DOCTYPE html>
<html>

<head>
</head>

<body>
    <script>
        function isOdd() {
            let num = document.getElementById("num").value
            if (num % 2 === 0) {
                document.getElementById("result").innerText = "It is not odd!!!!"
            } else {
                document.getElementById("result").innerText = "It's odd!!!"
            }
        }

        function isPerfectSquare() {
            let num = document.getElementById("num").value
            for (let n = 1; n < 1000; n++) {
                if (n * n == num) {
                    document.getElementById("result").innerText = "It is a perfect square!!!!";
                    break;

                }
                document.getElementById("result").innerText = "It is not a perfect square."

            }
        }
    </script>
    <h1>Fun with Numbers</h1>
    <p>Please enter a number:
        <input type="number" id="num">
    </p>
    <button onclick="isOdd()"> is odd? </button>
    <button onclick="isPerfectSquare()"> is perfect square? </button>
    <p>
        <output id="result" />

</body>

</html>
